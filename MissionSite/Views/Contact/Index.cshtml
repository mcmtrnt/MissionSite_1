
@{
    Layout = null;
}

<!DOCTYPE html>
<script>
    function clearButton() {
        document.getElementById('email').value = '';
        document.getElementById('name').value = '';
        document.getElementById('subject').value = '';
    }
</script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/myCSS/StyleSheet1.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Contact</title>
</head>
<body>
    <div class="w3-bar w3-black">
        <a href="@Url.Action("Index", "Home")" class="w3-bar-item w3-button"><b>Home</b></a>
        <a href="@Url.Action("Mission", "Home")" class="w3-bar-item w3-button">Missions</a>
        <a href="@Url.Action("Index", "AboutUs")" class="w3-bar-item w3-button">About Us</a>
        <a href="@Url.Action("Index", "Contact")" class="w3-bar-item w3-button">Contact</a>
    </div>
    <div class="container">
        <div class="jumbotron">
            <h1>Contact Us</h1>
            <h3>Phone Number - (801) 647-7466 or (801) MIS-SION</h3>
            <h3>Email - missionsareawesome@gmail.com</h3>
        </div>
    </div>
    <br />

    <div class="container text-center">

        <div>
            <form>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="name" type="text" class="form-control input-lg" name="userName" placeholder="Name">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input id="email" type="text" class="form-control input-lg" name="email" placeholder="Email">
                </div>
                <br />
                <div class="dropdown pull-left">
                    <button class="btn btn-primary dropdown-toggle btn-lg" type="button" data-toggle="dropdown">
                        Subject
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Returns</a></li>
                        <li><a href="#">Products</a></li>
                        <li><a href="#">General Questions</a></li>
                    </ul>
                </div>
                <br />
                <br />
                <br />
                <div style="color: black; background-color: rgb(238, 238, 238); width: 450px; padding: 5px; border-radius: 6px;">
                    <h4> Please type your questions or comments below.</h4>
                </div>
                <br />
                <div>
                    <textarea id="subject" name="subject" placeholder="Write something.." style="height: 100px; width: 1140px; border-radius: 6px; font-family: Arial, Helvetica, sans-serif; font-size: 18px; padding-left: 5px; padding-top: 5px;"></textarea>
                </div>
            </form>
            <br />
            <a class="btn btn-primary btn-lg pull-left" href="#" role="button" onclick="clearButton()">Submit</a>
        </div>
    </div>
</body>
</html>
